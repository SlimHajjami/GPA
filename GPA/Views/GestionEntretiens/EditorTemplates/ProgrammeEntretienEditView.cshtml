        })
        .HtmlAttributes(new { style = "width: 150px" })
    )
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Ou</label><br />
    @Html.Kendo().IntegerTextBox().Name("RappelKilometrage").HtmlAttributes(new { style = "width: 100px" })
