@using Kendo.Mvc.UI;
@model GPA.Models.VehiculeConducteurModel
@{var myUser = new KPIPrincipal();}

<input id="IdConducteur" name="IdConducteur" type="hidden">

<div class="col-md-6">
    <label>Nom</label>
    @Html.Kendo().TextBox().Name("NomConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6">
    <label>Prénom</label>
    @Html.Kendo().TextBox().Name("PrenomConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Date naissance</label>
    @(Html.Kendo().DatePicker().Name("DateNaissanceConducteur").HtmlAttributes(new { style = "width: 100%" }))
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Date embauche</label>
    @(Html.Kendo().DatePicker().Name("DateEmbaucheConducteur").HtmlAttributes(new { style = "width: 100%" }))
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Numéro permis</label>
    @Html.Kendo().TextBox().Name("NumeroPermisConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Adresse</label>
    @Html.Kendo().TextBox().Name("AdresseConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Ville</label>
    @Html.Kendo().TextBox().Name("VilleConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Code postal</label>
    @Html.Kendo().TextBox().Name("CodePostalConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Tel1</label>
    @Html.Kendo().TextBox().Name("Tel1Conducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Tel2</label>
    @Html.Kendo().TextBox().Name("Tel2Conducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

<div class="col-md-6" style="margin-top:15px;">
    <label>Email</label>
    @Html.Kendo().TextBox().Name("EmailConducteur").HtmlAttributes(new { style = "width: 100%" })
</div>

@if (myUser.Profile == 1)
{
    <div class="col-md-6" style="margin-top:15px;">
        <label>Client</label>
        @(Html.Kendo().DropDownListFor(m => m.ClientId)
        .ValuePrimitive(true)
        .OptionLabel("Sélectionner client...")
        .DataTextField("NomClient")
        .DataValueField("IdClient")
        .DataSource(dataSource =>
        {
            dataSource.Read(read => read.Action("GetClients", "CmbBoxs"));
        })
        .HtmlAttributes(new { style = "width: 100%" })
        )
    </div>
}