<!DOCTYPE html>
@{
    var myUser = new KPIPrincipal();

}
@using GPA.Models;
@using System.Configuration;
@using Kendo.Mvc.UI;
<html lang="en">

<head>
    @RenderSection("styles", required: false)
    @Html.Partial("_head")

    <title> </title>



</head>

<body class="full-height" style="background-color: #EEF9FE">
    @RenderSection("stylesOfPage", required: false)
    <!--debut page-->

    <div class="content-page forced" id="wrapper">
        <!-- header-->
        @Html.Partial("_PartialHead", new ViewDataDictionary { { "Module", "Edition" }, { "Color", "#01d0b3;" } })

        <div class="main-container" id="#page">
            <div class="sidebar">
                <div class="sidebar-content ">
                    <ul class="navigation">
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_DEPENSES))
                        {
                            <li>
                                <a href="~/Edition/RapportDepenses">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Rapport Dépenses</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_DEPENSES_GLOBAL))
                        {
                            <li>
                                <a href="~/Edition/RapportDepensesGlobal">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Rapport Dépenses Global</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_CONSOMMATION_CARBURANT_MENSUEL))
                        {
                            <li>
                                <a href="~/Edition/RapportConsommationCarburantMensuel">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Carburant Mensuel</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_CONSOMMATION_CARBURANT_SEMESTRIELLE))
                        {
                            <li>
                                <a href="~/Edition/RapportConsommationCarburantSemestrielle">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Carburant / Département</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_CONSOMMATION_CARBURANT_SEMESTRIELLE))
                        {
                            <li>
                                <a href="~/Edition/RapportConsommationCarburantParMarqueSemestrielle">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Carburant / Marque</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_ENTRETIEN_REPARATION))
                        {
                            <li>
                                <a href="~/Edition/RapportEntretienReparation">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Entretien Réparation</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_ENTRETIEN_REPARATION_MENSUEL))
                        {
                            <li>
                                <a href="~/Edition/RapportEntretienReparationMensuel">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Entretien Réparation Mensuel</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_GLOBAL))
                        {
                            <li>
                                <a href="~/Edition/RapportGlobal">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Rapport Global</span>
                                </a>
                            </li>
                        }
                        @if (myUser.Rights.Contains(Enumerators.AccessRights.RAPPORT_DEPENSES_DETAILLEES))
                        {
                            <li>
                                <a href="~/Edition/RapportDepensesDetaillees">
                                    <small class="left-menu-icon"> <i class="zmdi zmdi-collection-text"></i></small>
                                    <span class="left-menu-text">Rapport Dépenses Détaillées</span>
                                </a>
                            </li>
                        }
                    </ul>
                    <!-- /main navigation -->

                </div>
            </div>
            <div class="page-content clearfix">
                <div class="inner-content">


                    <section class="content-wrapper main-content clear-fix">
                        @RenderSection("scriptsOfPage", required: false)
                        @RenderBody()
                        <!--tu ajoute ce code-->
                        <script type="text/javascript">
                                    $('.navigation').find('li').has('ul').children('a').on('click', function (e) {
                                        e.preventDefault();

                                        if ($('body').hasClass('sidebar-narrow')) {
                                            $(this).parent('li > ul li').not('.disabled').toggleClass('active').children('ul').slideToggle(250);
                                            $(this).parent('li > ul li').not('.disabled').siblings().removeClass('active').children('ul').slideUp(250);
                                        }

                                        else {
                                            $(this).parent('li').not('.disabled').toggleClass('active').children('ul').slideToggle(250);
                                            $(this).parent('li').not('.disabled').siblings().removeClass('active').children('ul').slideUp(250);
                                        }
                                    });
                        </script>
                    </section>


                </div>
            </div>
        </div>
    </div>
</body>


</html>
@RenderSection("scripts", required: false)
